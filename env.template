# LangSmith Tracing Configuration (AIarm Account)
# Copy this file to .env and update with your actual credentials
LANGCHAIN_TRACING_V2=true
LANGCHAIN_ENDPOINT=https://api.smith.langchain.com
LANGCHAIN_API_KEY=your_aiarm_langsmith_api_key_here
LANGCHAIN_PROJECT=bos-workflow-aiarm

# PostgreSQL Database Configuration for Workflow Persistence
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=bos_workflow_db
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_postgres_password_here
POSTGRES_CONNECTION_STRING=postgresql://postgres:your_postgres_password_here@localhost:5432/bos_workflow_db

